<h1><img src="/css/connectplaylogo2.png" class="picture" />Connect + Play</h1>

<h2 id="signIntitle">sign in</h2>
<div class="container" id="signin">
   {{#if message}}
<div class="error">
  <span  style="color: red ;font-weight:bold; font-size:30px;">{{message}}</span>
</div>
{{/if}}

   <form name="signin" method="post" action="signin">
      <div class="form-group">
         <label for="email">Email Address</label>
         <input class="text" name="email" type="text" />
      </div>
      <div class="form-group">
         <label for="password">Password</label>
         <input name="password" type="password" />
      </div>
      <input class="btn" type="submit" value="Sign In" />
      <P style="color: black ;font-weight:bold; font-size:20px;"> Dont have an account ? <a href="/register">Sign Up</a> </P>
   </form>
</div>